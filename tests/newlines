# allowed for now :)
Fn.new{|a| return;}

# should be able to break at operators
assert 1 +
    2 *
    3 == 7

for (
    i
    =
    1..10
    ) {

    # allow for trailing and leading whitespace.
    # at one point, this was a bug in the compiler.
    assert i == i

    # another one just to be sure.
    assert i == i

}

# newlines are ignored inside of the grouping brackets.
assert (
    1
    +
    2
    -
    -1
    *
    3
) == 6

