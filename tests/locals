do {
    # check the default initializer value.
    let b;
    assert b == nil;

    let a = 1;
    assert a == 1;
    do {
        assert a == 1;
        let a = 2;
        assert a == 2;
        do {
            assert a == 2;
            let a = 3;
            assert a == 3;
            a = 4;
            assert a == 4;
        }
        assert a == 2;
        a = 3;
        assert a == 3;
        do {
            assert a == 3;
        }
        assert a == 3;
    }
    assert a == 1;
}
